<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.spacex_app.utiles.DateUtils"/>

        <variable
            name="model"
            type="com.example.spacex_app.presentation.model.historyModel.HistoryModel" />
    </data>

    <LinearLayout
        android:id="@+id/layout_history_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_half"
        android:orientation="vertical"
        android:layout_margin="@dimen/spacing_quarter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/image_size_default"
                android:layout_height="@dimen/image_size_default"
                android:background="@drawable/ic_circle_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@{model.id.toString()}"
                    tools:text="1" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_half">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{model.title}"
                    tools:text="@tools:sample/full_names"
                    android:textSize="@dimen/text_size_default"
                    android:textStyle="bold"
                    android:textColor="@color/grey_light"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{DateUtils.formatToLocaleDate(model.eventDateUtc)}"
                    tools:text="@tools:sample/lorem"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/grey_light"
                    android:layout_marginTop="@dimen/spacing_quarter"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:text="@{model.details}"
            tools:text="@tools:sample/lorem/random"
            android:textColor="@color/grey"
            android:layout_marginTop="@dimen/spacing_half"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/spacing_half" />
    </LinearLayout>
</layout>