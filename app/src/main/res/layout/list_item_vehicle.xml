<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.spacex_app.presentation.model.vehicleModel.VehicleModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <ImageView
                android:id="@+id/image_vehicle"
                android:layout_width="@dimen/image_size_default"
                android:layout_height="@dimen/image_size_default"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_earth" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_middle"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/spacing_quarter">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{model.name}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_default"
                    android:textStyle="bold"
                    tools:text="@string/home_launched_by" />

                <TextView
                    android:id="@+id/text_launched_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_quarter"
                    android:text="@{model.buildDate}"
                    android:textColor="@color/grey"
                    tools:text="It will carry CRS-19 to ISS orbit" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="74dp"
            android:background="@color/white" />
    </LinearLayout>
</layout>