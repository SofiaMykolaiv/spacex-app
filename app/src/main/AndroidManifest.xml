<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spacex_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SpacexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_space_x"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_space_x_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.activity.SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.activity.MainActivity" />
        <activity android:name=".presentation.activity.VehicleDetailsActivity" />
    </application>
</manifest>